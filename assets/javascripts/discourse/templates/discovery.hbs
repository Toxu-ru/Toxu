<a name="hone"></a> 
<div class="container">
  {{discourse-banner user=currentUser banner=site.banner}}
</div>

{{mount-widget widget="toxu-items"}}

<div class="blog-list">

<div class="list-controls">
  <div class="container">
    {{outlet "navigation-bar"}}
  </div>
</div>


<div class="cat-info">
   {{cat-info src=category.categorization}}
</div>


{{#if siteSettings.sidebar_enable}}
  <div class="sidebar">
    {{mount-widget widget="sidebar-items"}}
  </div>
{{/if}}





<div class="container list-container {{if siteSettings.sidebar_enable "has-sidebar"}}">
 
 <div class="row">
    <div class="full-width">
      {{conditional-loading-spinner condition=loading}}
      <div id="header-list-area">
        {{outlet "header-list-container"}}
      </div>
    </div>
  </div>
  
  <div class="row {{if loading "hidden"}}">
    <div class="full-width">
      <div id="list-area">
        {{plugin-outlet name="discovery-list-container-top"
                        args=(hash category=category listLoading=loading)}}
        {{outlet "list-container"}}
      </div>
    </div>
  </div>
 

  
</div>

 <div class="sidebar-m">
 {{mount-widget widget="sub-menu"}}
 </div>

</div>



{{plugin-outlet name="discovery-below"}}
