<div id="fon" class="fon">
<a name="toxu-top"></a> 
<style>.navigation-topics tr.category-other{display: none !important;}</style>
{{#if currentUser.custom_fields.userbar_profile}}
<style>.navigation-topics tr.category-other{display: table-row !important;}</style>
{{/if}}

{{mount-widget widget="toxu-items"}}

<div class="blog-list">

<div class="sidebar"> 
<div class="sidebar-fix"> 
<div class="sidebar-fon"> 
    {{#if category.uploaded_logo.url}}
      {{cdn-img src=category.uploaded_logo.url class="category-logo"}}
      {{#if category.description}}
         <span class="dis-info-name">{{{dir-span category.name}}}</span>
         <span class="dis-info">{{{dir-span category.description}}} Вопросов: {{{dir-span category.topic_count}}}</span>
<span class="dis-info-more"><a href="https://toxu.ru{{{dir-span category.topic_url}}}"><i class="fa fa-list" aria-hidden="true"></i> подробнее...</a></span>

      {{/if}}
    {{/if}}
 
     {{cat-info src=category.categorization}}
</div> 
<div class="sidebar-qa">
{{dir-span category.categorqa}}
</div>
</div>
</div>

<div class="telo-qa">

<div class="container list-container {{if siteSettings.sidebar_enable "has-sidebar"}} {{if currentUser.custom_fields.userbar_cat "test"}}">
 
{{discourse-banner user=currentUser banner=site.banner}} 
 
 
<div class="list-controls">
  <div class="container">
    {{outlet "navigation-bar"}}
  </div>
</div> 
 
 
 <div class="row">
    <div class="full-width">
      {{conditional-loading-spinner condition=loading}}
      <div id="header-list-area">
        {{outlet "header-list-container"}}
      </div>
    </div>
  </div>
  
  <div class="row {{if loading "hidden"}}">
    <div class="full-width">
      <div id="list-area">
        {{plugin-outlet name="discovery-list-container-top"
                        args=(hash category=category listLoading=loading)}}
        {{outlet "list-container"}}
      </div>
    </div>
  </div>
 

  
</div>




 <div class="sidebar-m {{if currentUser.custom_fields.userbar_cat "test"}}">
 {{mount-widget widget="sub-menu"}}
 </div>

 </div>

</div>

{{plugin-outlet name="discovery-below"}}
</div>
<a href="https://toxu.ru/#toxu-top" id="scroll-top" style="display: none;" class="cvet"><i class="fa fa-arrow-up"></i></a>
