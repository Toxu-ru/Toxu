<div id="fon" class="fon {{if currentUser.custom_fields.userbar_cat "test"}}">
<a name="toxu-top"></a> 
 
{{mount-widget widget="toxu-items"}}

<div class="blog-list ">

<div class="sidebar"> 
<div class="sidebar-fix"> 
<div class="sidebar-fon"> 
    {{#if category.uploaded_logo.url}}
      <div class="catimg">{{cdn-img src=category.uploaded_logo.url class="cat-big"}}</div>
      {{#if category.description}}
         <span class="dis-info-name">{{{dir-span category.name}}}</span>
         <span class="dis-info">{{{dir-span category.description}}}<br><br> Вопросов: {{{dir-span category.topic_count}}}</span>
<span class="dis-info-more"><a href="https://toxu.ru{{{dir-span category.topic_url}}}"><i class="fa fa-list" aria-hidden="true"></i> подробнее...</a></span>
<span class="dis-info-rss"><a href="https://toxu.ru/c/{{{dir-span category.slug}}}.rss"><i class="fa fa-rss" aria-hidden="true"></i>
 лента раздела...</a></span>
      {{/if}}
    {{/if}}
 
     {{cat-info src=category.categorization}}
</div> 
<div class="sidebar-qa">
{{dir-span category.categorqa}}
</div>
</div>
</div>

<div class="telo-qa {{if currentUser.custom_fields.userbar_profile "other-no"}}">

<div class="container list-container has-sidebar">
 
{{discourse-banner user=currentUser banner=site.banner}} 
 
 
<div class="list-controls">
  <div class="container">
    {{outlet "navigation-bar"}}
  </div>
</div> 
 
 
 <div class="row">
    <div class="full-width">
      {{conditional-loading-spinner condition=loading}}
      <div id="header-list-area">
        {{outlet "header-list-container"}}
      </div>
    </div>
  </div>
  
  <div class="row {{if loading "hidden"}}">
    <div class="full-width">
      <div id="list-area">
        {{plugin-outlet name="discovery-list-container-top"
                        args=(hash category=category listLoading=loading)}}
        {{outlet "list-container"}}
      </div>
    </div>
  </div>
 

  
</div>




 <div class="sidebar-m"> 
 {{mount-widget widget="sub-menu"  args=(hash listLoading=loading)}}
 </div>

 </div>

</div>

{{plugin-outlet name="discovery-below"}}
</div>
<a href="https://toxu.ru/#toxu-top" id="scroll-top" style="display: none;" class="cvet"><i class="fa fa-arrow-up"></i></a>
