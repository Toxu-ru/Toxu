{{#if siteSettings.userbar_enabled}}
  <div class="control-group signatures">
    <label class="control-label">Для общения</label>
     <div class="controls">
      <label class='checkbox-label'>
        {{preference-checkbox labelKey="user.userbar_profile" checked=model.custom_fields.userbar_profile}}
        
       
        
           <span class="instructions"> Добавить раздел Для общения в ленту вопросов.</span>
      </label>
    </div>
  </div>
  
 <div class="control-group signatures">
    <label class="control-label">Расположение колонки</label>
   <div class="controls">
      <label class='checkbox-label'>
        {{preference-checkbox labelKey="user.userbar_cat"  checked=model.custom_fields.userbar_cat}}
        <span class="instructions">   Расположить боковую колонку (с Разделами) в правой части экрана.</span>
      </label>
    </div>
  </div>
{{/if}}
